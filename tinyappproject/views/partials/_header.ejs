<title> My Link Shortner </title>
 <% if(user){ %>
    <p>Welcome <%= user.email %></p>
    <form method="POST" action="/logout">
        <input type="submit" name="submit" value="Logout" />
    </form>
<% } else { %>
    <form action="/login" method="POST">
        <label for="longURL"> Email</label>
        <input type="text" name="email" placeholder="" style="width: 200px">
        <label for="longURL"> Password</label>
        <input type="password" name="password" placeholder="" style="width: 200px">
        <input type="submit" value="Submit">
    </form>
<% } %>
